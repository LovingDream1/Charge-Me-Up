/* pages/home/home.wxss */

page {
  background-color: #fff
}

/* 图标 */
.logo {
  margin-left: 10rpx;
  margin-right: 10rpx;
  margin-top: 10rpx;
  width: 97%;
  height: 250rpx;
  border-radius: 26px;
}


/* 菜单栏 */
.title {
  border-radius: 30rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
  width: 97%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #fff;
  /* background: linear-gradient(to right, #b5fce4, #97fad9,#cefffb); */
}

/* 菜单栏图片 */
.title image {
  margin-left: 15rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  width: 3%;
  height: 50rpx;
  border-radius: 30rpx;
}

/* 菜单栏文本 */
.title text {
  margin-left: 10rpx;
  margin-top: 15rpx;
  margin-bottom: 15rpx;
  font-size: 40rpx;
  font-family: "隶书"
}

/* 功能栏框架 */
.list-grid {
  border-radius: 50rpx;
  width: 99.5%;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 10rpx solid #efefef;
  box-sizing: border-box;
  background-color: rgb(253, 253, 253);
  background: linear-gradient(to right, #e4f3ae, #c6ee99);
}

/* 功能按钮 */
.grid-item {
  width: 33%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}

/* 功能按钮图片 */
.grid-item image {
  margin-top: 30rpx;
  width: 100rpx;
  height: 100rpx;
}

/* 功能文字简介 */
.grid-item text {
  font-size: large;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  font-family: "隶书";
}

/* 充电状态 */
.charged {
  border-radius: 50rpx;
  margin-bottom: 20rpx;
  margin-left: rpx;
  margin-right: 5rpx;
  border: 10rpx solid #efefef;
  background-color: rgb(255, 255, 255);
  background: linear-gradient(to right, #e4f3ae, #c6ee99);
}

/* 提示标题 */
.title2 {
  width: 80%;
  display: flex;
  align-items: center;
}

.title2 image {
  margin-top: 20rpx;
  margin-left: 40rpx;
  width: 40rpx;
  height: 40rpx;
}

.title2 text {
  margin-top: 40rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  font-size: 45rpx;
  font-family: "华文新魏";
}

/* 倒计时组件 */
.countdown .item {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100rpx;
  width: 90%;
  margin: 0 5%;
  border-bottom: 2rpx solid #eee;
}

/* 文字样式 */
.countdown .item .txt-time {
  background-color: #6EBEC7;
  color: #fff;
  border-radius: 10rpx;
  font-size: 40rpx;
  margin: 0 4rpx;
  font-weight: bold;
  height: 60rpx;
  width: 100rpx;
  line-height: 56rpx;
  text-align: center;
}

/* 单位样式 */
.countdown .item .units {
  margin-left: 10rpx;
  margin-right: 10rpx;
  font-size: 30rpx;
  font-family: "Showcard Gothic";
}

/* 位置信息 */
.location .item {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100rpx;
  width: 90%;
  margin: 0 5%;
  border-bottom: 2rpx solid #eee;
}

/* 详细点位 */
.location .item .num {
  background-color: #6EBEC7;
  color: #fff;
  border-radius: 10rpx;
  font-size: 40rpx;
  margin: 0 4rpx;
  font-weight: bold;
  height: 60rpx;
  width: 60rpx;
  line-height: 54rpx;
  text-align: center;
}

/* 其余信息 */
.location .item .info {
  margin-left: 10rpx;
  margin-right: 10rpx;
  font-size: 35rpx;
  font-family: "隶书";
}

/* 页面底部提示 */
.tip {
  display: flex;
  justify-content: center;
  align-items: center;
  font-family: "楷体";
  font-weight: 300;
}