/* pages/home/home.wxss */
.logo {
  margin-left: 15rpx;
  margin-right: 15rpx;
  width: 96%;
  height: 250rpx;
}

.title {
  margin-top: 10rpx;
  width: 30%;
  height: 60rpx;
}

.list-grid {
  margin-top: 10rpx;
  display: flex;
  border: 20rpx solid #efefef;
box-sizing: border-box;
}

.grid-item {
  width: 33.33%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}

.grid-item image {
  width: 150rpx;
  height: 150rpx;
}

.grid-item text{
  font-size: large;
  margin-top: 10rpx;
}